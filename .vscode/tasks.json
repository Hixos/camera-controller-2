{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Meson build",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceFolder}/builddir"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",          
        },
        {
            "type": "shell",
            "label": "RUN CC2",
            "command": "${workspaceFolder}/build/debug/cc2-x86",
            "group": "test"
        }
    ]
}